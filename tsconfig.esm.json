{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "rootDirs": ["src", "test"],
    "moduleResolution": "node",
    "outDir": "./build/esm/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": false,

    "declaration": true,
    "declarationDir": "./build/types/"
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["**/*.proof.ts", "./jest.config.ts", "./test/**/*", "./build/**/*"]
}
